<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.visual28.mango.plugins.cssNakedDay" name="CSS Naked Day" version="1.0" provider-name="visual28" class="cssNakedDay.Handler">
	<description>
		<![CDATA[
		Removes your sites css files in observance of <a href="http://naked.dustindiaz.com/">CSS Naked Day</a> on April 9th.
		]]>
	</description>

	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>
	
	<listens>
		<event name="beforeHtmlHeadEnd" type="synch" priority="5" />
		<event name="beforeHtmlBodyStart" type="synch" priority="5" />
		<event name="settingsNav" type="synch" priority="5" />
		<event name="showCSSNakedDaySettings" type="synch" priority="5" />
	</listens>
</plugin>