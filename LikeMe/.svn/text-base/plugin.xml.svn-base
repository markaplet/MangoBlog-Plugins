<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.visual28.mango.plugins.LikeMe" name="Facebook Like Me" version="1.2" provider-name="visual28" class="LikeMe.Handler">
<description>
	<![CDATA[
		<p>The Like button lets a user share your content with friends on Facebook. When the user clicks the Like button on your site, a story appears in the user's friends' News Feed with a link back to your website.</p>
		
		Written By: <a href="http://www.visual28.com">Mark Aplet</a><br/>
		Find the latest version at: <a href="http://www.visual28.com/page/projects">Visual28</a>
	]]>
</description>
<requiresVersion match="greaterOrEqual">1.2.2</requiresVersion>
  <listens>
	<event name="settingsNav" type="synch" priority="5" />
  	<event name="showLikeMeSettings" type="synch" priority="5" />
	<event name="beforePostContentEnd" type="synch" priority="6" />
  </listens>
</plugin>