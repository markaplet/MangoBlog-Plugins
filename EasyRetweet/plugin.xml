<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.visual28.mango.plugins.EasyRetweet" name="Easy Retweet" version="1.1" provider-name="visual28" class="EasyRetweet.Handler">
	<description>
		<![CDATA[
		Adds support for <a href="http://ejohn.org/blog/retweet/">John Resig's Easy Retweet Buttons</a>.<br />
		Mango Plugin by <a href="http://www.visual28.com/articles/easy-retweet-plugin">Mark Aplet</a>
		]]>
	</description>

	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>
	
	<listens>
		<event name="getPods" type="synch" priority="5" />
		<event name="beforeHtmlHeadEnd" type="synch" priority="5" />
		<event name="getPodsList" type="synch" priority="1" />
		<event name="settingsNav" type="synch" priority="5" />
		<event name="showRetweetSettings" type="synch" priority="5" />
		<event name="beforePostContentEnd" type="synch" priority="5" />
	</listens>
	
	<assets>
		<asset file="assets/retweet.js" />
	</assets>
</plugin>